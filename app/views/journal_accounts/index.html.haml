= provide(:title, "Manage Journal Account")
- content_for :specific_js do
  = javascript_include_tag 'journal_accounts', 'data-turbolinks-track' => true
- content_for :side_content do
  = render "layouts/shared/sidebars/journal_status"
.row
  .col-md-6
    %h1 Manage Journal Account
  .col-md-6
    .action{style: "margin-top: 20px;"}
      .pull-right
        = link_to journals_path, class: "btn btn-lg btn-default" do
          %i.fa.fa-arrow-left
          Journal
        = link_to new_journal_journal_account_path(@journal), class: "btn btn-lg btn-primary", remote: true do
          %i.fa.fa-pencil
          Tambah Account
%hr/
-content_for :content do
  %table#journal-accounts.table.table-bordered{"data-source" => "#{journal_journal_accounts_url(@journal, format: "json")}"}
    %thead
      %tr
        %th
          .text-center Username
        %th
          .text-center Password
        %th
          .text-center Lainnya
        %th
          .text-center Enabled
        %th
          .text-center Action
    %tbody

