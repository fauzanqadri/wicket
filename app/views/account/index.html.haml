- provide(:title, "Accounts")
- content_for :specific_js do
  = javascript_include_tag "account", 'data-turbolinks-track' => true
- content_for :side_content do
  = render "layouts/shared/sidebars/journal_status"
.row
  .col-md-6
    %h1 Manage Account
  .col-md-6
    .action{style: "margin-top: 20px;"}
      .pull-right
        = link_to new_account_path, class: "btn btn-lg btn-primary", remote: true do
          %i.fa.fa-pencil
          Tambah Account
%hr
- content_for :content do
  %table#accounts.table.table-bordered{"data-sourse" => "#{account_index_path(format: "json")}"}
    %thead
      %tr
        %th
          .text-center Nama Lengkap
        %th
          .text-center Username
        %th
          .text-center Email
        %th
          .text-center Created at
        %th
          .text-center Action
